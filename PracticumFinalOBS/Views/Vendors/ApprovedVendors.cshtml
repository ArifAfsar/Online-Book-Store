@model IEnumerable<PracticumFinalOBS.Models.Vendor>

@{
    ViewData["Title"] = "ApprovedVendors";
}
<div class='row'>
    <div class="col-md-8">
        <h1 class="display-4">Approved Vendor List</h1>
    </div>
    <div class="col-md-4">
        <br/>
        <form asp-action="ApprovedVendors" method="post" class="form-inline">
            <div class="form-group col-md-8">
                <input class="form-control" type="text" placeholder="Who are you looking for?" name="vend" value="@ViewBag.vend"/>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>                    
                
        </form>
    </div>
</div>
<br/>

<table class="table table-hover table-active">
    <thead class="bg-dark">
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.VendorPhone)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.VendorEmail)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.VendorCompany)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorCompany)
            </td>
            
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section head{
    <style type="text/css">
         body {
            background: rgb(184 196 209);
            background: linear-gradient(90deg, rgb(206 210 213) 0%, rgb(223 255 230) 28%, #96c5cd 51%, rgb(203 199 199) 73%, rgb(178 177 209) 100%);
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
    </style>
}