@model IEnumerable<PracticumFinalOBS.Models.Book>

@{
    ViewData["Title"] = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inventory</h1>

<p>
    <a class="btn btn-primary" asp-controller="Books" asp-action="Create">Add A New Item</a>
</p>
<table class="table table-hover table-stripped border-left border-right border-bottom">
    <thead class="bg-dark">
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            
            <th class="text-white">
                Items In Stock
            </th>       
            <th class="text-white">
                @Html.DisplayNameFor(model => model.Price)
            </th>                        
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            
            <td>  
            <img class="card-img-top" src="~/Books/@item.Image" style="width:120px; height:170px;" alt="Card image cap">            
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-controller="Books" asp-action="Edit" class="btn btn-sm btn-info" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Details</a> |
                <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section head{
    <style type="text/css">
         body {
            background: rgb(184 196 209);
            background: linear-gradient(90deg, rgb(206 210 213) 0%, rgb(223 255 230) 28%, #96c5cd 51%, rgb(203 199 199) 73%, rgb(178 177 209) 100%);
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
    </style>
}