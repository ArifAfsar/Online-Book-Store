@model PracticumFinalOBS.Models.Admin

@{
    ViewData["Title"] = "Create";
}



<h4 class="bg-warning display-4 text-center"><u>ADMIN REGISTRATION</u></h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-4 border-danger">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter Email Address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label text-white"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label text-white"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact" class="control-label text-white"></label>
                <input asp-for="Contact" class="form-control" placeholder="Enter Phone Number"/>
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success form-control btn-sm" />
            </div>
        </form>
    </div>
</div>

<br/>
<div>
    <a asp-action="Index" class="btn btn-danger">View Admins</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section head{
    <style type="text/css">
         body {
            background-image: url('/Backgrounds/CreateRole.jpg');
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
    </style>
}