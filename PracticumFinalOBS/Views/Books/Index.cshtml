@model IEnumerable<PracticumFinalOBS.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (Model.Any())
{
    <h4 class="text-center display-4 alert alert-info">Our Products</h4>    
    <form asp-action="Index" method="get" class="form-inline" id="form">
        <div>
            <input class="form-control" style="width:250px;" type="text" placeholder="What are you looking for?" name="booksrch" value="@ViewBag.book"/>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <select class="form-control" name="catagory" onchange="this.form.submit();">
            <option select value=""> Select a catagory</option>
            @foreach (var z in ViewBag.cat)
            {
                <option value="@z">@z</option>
            }
        </select>  
    </form>
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="card ml-4 mr-4 mb-4 mt-4" style="width: 20rem;">
                <img class="card-img-top" src="~/Books/@item.Image" style="width:300px; height:450px;" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.BookName</h5>
                    <p>Price:                  @item.Price BDT</p>
                </div>
                <div class="card-body">
                    <a href="#" class="card-link btn btn-info">Add To Cart</a>
                    <a asp-action="Details" asp-route-id ="@item.Id" class="card-link btn btn btn-warning">Details</a>
                </div>
            </div>
        }
    </div>
}
else
{
     <h4 class="text-center display-4 alert alert-info">Our Products</h4>    
    <form asp-action="Index" method="get" class="form-inline" id="form">
        <div>
            <input class="form-control" style="width:250px;" type="text" placeholder="What are you looking for?" name="booksrch" value="@ViewBag.book"/>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <select class="form-control" name="catagory" onchange="this.form.submit();">
            <option select value=""> Select a catagory</option>
            @foreach (var z in ViewBag.cat)
            {
                <option value="@z">@z</option>
            }
        </select>  
    </form>
    <br/>
    <h4 class="display-4 text-danger"> Sorry!!! No Item Matches the Search Results</h4>
}
@section head{
    <style type="text/css">
        body {
            background-image: url('/Backgrounds/CreateRole.jpg');
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
    </style>
}
